<Window x:Class="AnhdlSE181818WPF.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnhdlSE181818WPF"
        mc:Ignorable="d"
        Title="Window1"
        Height="450"
        Width="800"
        Style="{StaticResource MyWindowStyle}">
    <!--WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">-->
    <Grid x:Name="winLogin"
          MouseDown="winLogin_MouseDown">
        <!--<Grid.Background>
            <SolidColorBrush Color="Red" Opacity="0.89"/>
        </Grid.Background>-->
        <Button Style="{StaticResource MyButtonStyle}"
                x:Name="btnLogin"
                Content="Login"
                HorizontalAlignment="Left"
                Margin="491,247,0,0"
                VerticalAlignment="Top"
                Height="30"
                Width="43"
                Click="btnLogin_Click" />
        <Label Style="{StaticResource MyLabelStyle}"
               x:Name="lblPassword"
               Content="Password"
               HorizontalAlignment="Left"
               Height="32"
               Margin="286,196,0,0"
               VerticalAlignment="Top"
               Width="79"
               FontWeight="Bold" />
        <Label Style="{StaticResource MyLabelStyle}" x:Name="lblEmail"
               Content="Email"
               Height="32"
               Margin="286,140,435,0"
               VerticalAlignment="Top"
               FontWeight="Bold" />
        <TextBox x:Name="txtEmail"
                 HorizontalAlignment="Left"
                 Height="32"
                 Margin="379,140,0,0"
                 VerticalAlignment="Top"
                 Width="168"
                 VerticalContentAlignment="Center" />
        <PasswordBox x:Name="txtPassword"
                     HorizontalAlignment="Left"
                     Height="32"
                     Margin="379,196,0,0"
                     VerticalAlignment="Top"
                     Width="168" />
        <Button Style="{StaticResource MyButtonStyle}"
                x:Name="btnExit"
                HorizontalAlignment="Left"
                Height="52"
                Margin="463,321,0,0"
                VerticalAlignment="Top"
                Width="108"
                FontWeight="Bold"
                BorderThickness="1,1,1,1"
                Content="Exit"
                Click="btnManageCustomer_Click" />

    </Grid>
</Window>
