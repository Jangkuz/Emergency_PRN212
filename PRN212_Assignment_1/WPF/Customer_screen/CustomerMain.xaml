<Window x:Class="AnhdlSE181818WPF.CustomerMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnhdlSE181818WPF"
        mc:Ignorable="d"
        Title="CustomerMain"
        Height="450"
        Width="800"
        Style="{StaticResource MyWindowStyle}">
    <Grid>
        <!--<Grid.Background>
            <SolidColorBrush Color="Red"
                             Opacity="0.89" />
        </Grid.Background>-->
        <Label Style="{StaticResource MyLabelStyle}" 
               x:Name="lblAdmin"
               Content="Customer"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               FontWeight="Bold"
               FontSize="20"
               Margin="143,33,0,0"
               Width="535"/>
        <Button Style="{StaticResource MyButtonStyle}" 
                x:Name="btnManageProfile"
                Content="Manage Profile"
                HorizontalAlignment="Left"
                Height="49"
                Margin="101,151,0,0"
                VerticalAlignment="Top"
                Width="270"
                FontWeight="Bold"
                Click="btnManageCustomer_Click" />
        <Button Style="{StaticResource MyButtonStyle}"
                x:Name="btnViewBooking"
                Content="View booking reservation history"
                HorizontalAlignment="Left"
                Height="49"
                Margin="459,151,0,0"
                VerticalAlignment="Top"
                Width="270"
                FontWeight="Bold" />
        <Button Style="{StaticResource MyButtonStyle}"
                x:Name="btnExit"
                Content="Exit"
                HorizontalAlignment="Left"
                Height="52"
                Margin="621,282,0,0"
                VerticalAlignment="Top"
                Width="108"
                FontWeight="Bold"
                Click="btnManageCustomer_Click" />
    </Grid>
</Window>
